<?xml version="1.0" encoding="utf-8"?> 
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="fill_parent"> 
		<TextView android:id="@+id/sdcardsourcelabel" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="SDCard Source:"/> 
		<EditText android:id="@+id/sdcardsourceentry" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textColor="#000000" android:background="@android:drawable/editbox_background" android:layout_below="@id/sdcardsourcelabel"/> 
		<TextView android:id="@+id/destinationlabel" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Destination:" android:layout_below="@id/sdcardsourceentry"/> 
		<EditText android:id="@+id/destinationentry" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@android:drawable/editbox_background" android:textColor="#000000" android:layout_below="@id/destinationlabel"/> 	
    	<Button android:id="@+id/ok" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/destinationentry" android:layout_alignParentRight="true" android:layout_marginLeft="10dip" android:text="OK" /> 
		<Button android:id="@+id/cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@id/ok" android:layout_alignTop="@id/ok" android:text="Cancel" /> 
<!--		<TextView android:id="@+id/loading"
			android:layout_width="wrap_content"
			android:layout_below="@id/ok"	
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:text="@string/loading" />-->
		<ProgressBar android:id= "@+id/progress_bar"
			android:layout_width="1000dp"
			android:layout_below="@id/ok"	
			android:layout_height="wrap_content"
			android:minWidth="1000dp"
			style="@android:style/Widget.ProgressBar.Horizontal"
			android:layout_marginRight="5dp" />
	</RelativeLayout>
